<div class="container vh-100 d-flex align-items-center">
  <div class="row w-100">
    <!-- First Section -->
    <div
      class="col-md-6 d-flex flex-column justify-content-center align-items-start text-start"
    >
      <h1 class="title-pink">A comprehensive plateform for reliable</h1>
      <h3 class="mt-3">job opportunities and internships</h3>
      <p class="mt-3">Get Discovered. Get Hired</p>
      <div class="mt-4">
        <a class="btn btn-secondary pink-bg me-2" href="/jobs"
          >I'm A Job Seeker</a
        >
        <% if(session?.user?.isrecruiter){ %>
        <a class="btn btn-secondary pink-bg" href="/jobs"> I'm A Recruiter</a>
        <% }else{ %>
        <button
          class="btn btn-secondary pink-bg"
          data-bs-toggle="modal"
          data-bs-target="#registerModal"
        >
          I'm A Recruiter
        </button>
        <% } %>
      </div>
    </div>

    <!-- Second Section -->
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <!-- <div class="col-md-6 d-flex justify-content-center align-items-center"> -->
      <img
        src="/images/home-bg.png"
        alt="Placeholder Image"
        class="img-fluid rounded-4 shadow-lg"
        width="400"
        height="400"
      />
    </div>
  </div>
</div>
