<div class="container">
  <div class="text-center">
    <h2 class="card-title text-success mb-2">
      Applicant List for
      <span class="text-info"
        ><%= `${jobs?.jobdesignation} Opportunity In ${jobs?.joblocation} at
        ${jobs?.companyname}` %></span
      >
    </h2>
    <a href="<%= `/jobs/${jobs?.id}` %>" class="btn btn-danger">Back</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Contact</th>
        <th scope="col">Resume</th>
      </tr>
    </thead>
    <tbody>
      <% jobs?.applicants.forEach((app)=>{ %>
      <tr>
        <th scope="row"><%= app.applicantid %></th>
        <td><%= app.name %></td>
        <td><%= app.email %></td>
        <td><%= app.contact %></td>
        <td>
          <a
            href="/<%= app.resume %>"
            download
            target="_blank"
            rel="noopener noreferrer"
            >view</a
          >
        </td>
      </tr>
      <% }) %>
